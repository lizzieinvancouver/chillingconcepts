	keywords = {Antioxidant enzyme activities, Bud dormancy release, Photoperiod, RNA-Seq},
	pages = {153835},
	file = {ScienceDirect Snapshot:C\:\\Users\\sapph\\Zotero\\storage\\SKMHAV53\\S0176161722002218.html:text/html},
